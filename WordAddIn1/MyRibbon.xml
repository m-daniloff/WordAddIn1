<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui"
          xmlns:esq="http://esqinc.com/V5/ui"
          onLoad="Ribbon_Load">
  <ribbon>
    <tabs>
      <tab idQ="esq:MyOwnTab" label="MyCustom" insertAfterMso="TabHome">
        <group id="ContentGroup" label="Content">
          <button id="textButton" label="Insert Text" getImage="OnGetImage"
               screentip="Text" onAction="OnRibbonButton"
               supertip="Inserts text at the cursor location."/>
          <button id="tableButton" label="Insert Table" getImage="OnGetImage"
               screentip="Table" onAction="OnRibbonButton"
               supertip="Inserts a table at the cursor location."/>
          <separator id="Sep1"/>
          <button id="normalMerge" label="Combine section (2nd pref)" imageMso="_2" onAction="MergeSecondPref"/>
          <button id="normalMerge2" label="Combine section (1st pref)" imageMso="_1" onAction="MergeFirstPref"/>
          <button id="sectionTools" label="Section Tools" imageMso="_9" onAction="ShowSectionTools" getEnabled="RibbonButtonEnabled"/>
        </group>
      </tab>
     
    </tabs>
  </ribbon>
</customUI>

